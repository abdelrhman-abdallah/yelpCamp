<% layout("layouts/boilerplate") %>

<h1 class="h1 text-center">Login</h1>

<form action="/login" method="post" class="validated-form" novalidate>
  <div class="mb-3">
    <label class="form-label" for="username">Username: </label>
    <input
      class="form-control"
      type="text"
      id="username"
      name="username"
      required
    />
    <div class="valid-feedback">Description Looks Good!</div>
  </div>
  <div class="mb-3">
    <label class="form-label" for="password">Password: </label>
    <input
      class="form-control"
      id="password"
      name="password"
      type="password"
      required
    />
    <div class="valid-feedback">Description Looks Good!</div>
  </div>
  <div>
    <button class="btn btn-success">Login</button>
  </div>
</form>
