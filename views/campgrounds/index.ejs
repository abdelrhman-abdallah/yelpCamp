<% layout("layouts/boilerplate") %>
<div id="map" style="width: 100%; height: 500px"></div>
<h1>All Campgrounds</h1>
<a class="btn btn-primary" href="/campgrounds/new">Add Campground</a>

<% for(let camp of campgrounds) { %>
<div class="card my-3">
  <div class="row">
    <div class="col-md-4">
      <% if (camp.images.length) { %>
      <img src="<%= camp.images[0].url %>" alt="" class="img-fluid" />
      <% } else { %>
      <img
        src="https://res.cloudinary.com/dav7stmnh/image/upload/v1693250819/YelpCamp/lsoujvor6cx7pwjzwvpx.jpg"
        alt=""
        class="img-fluid"
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= camp.title %></h5>
        <p class="card-text"><%= camp.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= camp.location %></small>
        </p>
        <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>"
          >View <%= camp.title %></a
        >
      </div>
    </div>
  </div>
</div>
<% } %>

<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const camps = { features: <%-JSON.stringify(campgrounds)%> };
</script>
<script src="/bootstrap-5.0.2-dist/js/clusterMap.js"></script>
