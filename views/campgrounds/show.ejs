<% layout("layouts/boilerplate") %>

<div class="row">
  <div class="col-7">
    <div class="card mb-3">
      <img
        src="<%= camp.image %>"
        alt="campground image"
        class="card-img-top"
      />
      <div class="card-body">
        <h5 class="card-title"><%= camp.title %> Details</h5>
        <p class="card-text"><%= camp.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item tex-muted"><%= camp.location %></li>
        <li class="list-group-item">
          Submitted By : <%= camp.author.username %>
        </li>
        <li class="list-group-item">$ <%= camp.price %>/night</li>
      </ul>
      <% if (currentUser && camp.author.equals(currentUser._id)) { %>
      <div class="card-body d-flex m-1 justify-content-between">
        <a
          class="card-link btn btn-warning"
          href="/campgrounds/<%= camp._id %>/edit"
          >Edit Campground</a
        >
        <form
          class="d-inline"
          action="/campgrounds/<%= camp._id %>?_method=DELETE"
          method="post"
        >
          <button class="btn btn-danger">Delete Camp</button>
        </form>
      </div>
      <% } %>
      <div class="card-footer text-muted">2 days ago</div>
    </div>
  </div>
  <div class="col-5">
    <% if (currentUser) { %>
    <h2 class="h2">Leave a Review!</h2>
    <form
      class="mb-2 validated-form"
      action="/campgrounds/<%= camp.id %>/reviews"
      method="post"
      novalidate
    >
      <div class="mb-2">
        <label class="form-label" for="rating">Rating: </label>
        <input name="review[rating]" id="rating" min="1" max="5" type="range" />
        <div class="valid-feedback">Rating Looks Good!</div>
      </div>
      <div class="mb-2">
        <label class="form-label" for="body">Review: </label>
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          cols="10"
          rows="3"
          required
        ></textarea>
        <div class="valid-feedback">Body Looks Good!</div>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
    <% } %> <% for(let review of camp.reviews) { %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">Rating: <%= review.rating %></h5>
        <h6 class="card-subtitle mb-2 text-muted">
          By:<%= review.author.username %>
        </h6>
        <p class="card-text">Review: <%= review.body %></p>
        <% if (currentUser && review.author.equals(currentUser._id)) { %>
        <form
          action="/campgrounds/<%= camp.id %>/reviews/<%= review.id %>?_method=DELETE"
          method="post"
        >
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
        <% } %>
      </div>
    </div>
    <% } %>
  </div>
</div>
